{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cldf.io/schemas/media.schema.json",
  "title": "CLDF Media",
  "description": "Media references for entities (climbs, routes, locations, sectors)",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "description": "List of media items",
      "items": {
        "$ref": "#/definitions/mediaItem"
      }
    },
    "count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total media count"
    }
  },
  "definitions": {
    "mediaItem": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "$ref": "#/definitions/mediaType"
        },
        "path": {
          "type": "string",
          "description": "Primary path/URL to the media file"
        },
        "assetId": {
          "type": "string",
          "description": "Asset ID for cloud/library stored media"
        },
        "thumbnailPath": {
          "type": "string",
          "description": "Path to thumbnail (for performance)"
        },
        "source": {
          "$ref": "#/definitions/mediaSource"
        },
        "designation": {
          "$ref": "#/definitions/mediaDesignation"
        },
        "caption": {
          "type": "string",
          "description": "User-provided description or caption"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the media was created or taken"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata",
          "additionalProperties": true,
          "properties": {
            "width": {"type": "integer"},
            "height": {"type": "integer"},
            "size": {"type": "integer"},
            "duration": {"type": "number"},
            "coordinates": {
              "type": "object",
              "properties": {
                "latitude": {"type": "number"},
                "longitude": {"type": "number"},
                "altitude": {"type": "number"}
              }
            }
          }
        }
      }
    },
    "mediaType": {
      "type": "string",
      "enum": ["photo", "video"],
      "description": "Type of media"
    },
    "mediaSource": {
      "type": "string",
      "enum": ["local", "cloud", "reference", "embedded", "external"],
      "description": "Source of the media"
    },
    "mediaDesignation": {
      "type": "string",
      "enum": ["topo", "beta", "approach", "log", "overview", "conditions", "gear", "descent", "other"],
      "description": "Purpose or type of media content",
      "default": "other"
    }
  }
}