{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cldf.io/schemas/media.schema.json",
  "title": "CLDF Media",
  "description": "Media references for climbs",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "description": "List of media items",
      "items": {
        "$ref": "#/definitions/mediaItem"
      }
    },
    "count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total media count"
    }
  },
  "definitions": {
    "mediaItem": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "$ref": "#/definitions/mediaType"
        },
        "path": {
          "type": "string",
          "description": "Primary path/URL to the media file"
        },
        "assetId": {
          "type": "string",
          "description": "Asset ID for cloud/library stored media"
        },
        "thumbnailPath": {
          "type": "string",
          "description": "Path to thumbnail (for performance)"
        },
        "source": {
          "$ref": "#/definitions/mediaSource"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata",
          "additionalProperties": true
        }
      }
    },
    "mediaType": {
      "type": "string",
      "enum": ["photo", "video"],
      "description": "Type of media"
    },
    "mediaSource": {
      "type": "string",
      "enum": ["local", "cloud", "reference", "embedded"],
      "description": "Source of the media"
    }
  }
}