{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cldf.io/schemas/routes.schema.json",
  "title": "CLDF Routes",
  "description": "Route and problem definitions",
  "type": "object",
  "required": ["routes"],
  "properties": {
    "routes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/route"
      }
    }
  },
  "definitions": {
    "route": {
      "type": "object",
      "required": ["id", "locationId", "name", "routeType"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier for the route (legacy)"
        },
        "clid": {
          "type": "string",
          "pattern": "^clid:route:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
          "description": "CrushLog ID - globally unique identifier (v1.3.0+)"
        },
        "locationId": {
          "type": "integer",
          "description": "Reference to location ID"
        },
        "sectorId": {
          "type": "integer",
          "description": "Reference to sector ID"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Route or problem name"
        },
        "routeType": {
          "type": "string",
          "enum": ["boulder", "route"],
          "description": "Type of route"
        },
        "routeCharacteristics": {
          "type": "string",
          "enum": ["trad", "bolted"],
          "description": "Route protection characteristics"
        },
        "grades": {
          "type": "object",
          "properties": {
            "vScale": {
              "type": ["string", "null"],
              "pattern": "^V(B|[0-9]{1,2})$"
            },
            "font": {
              "type": ["string", "null"],
              "pattern": "^[3-9][ABC]?[+]?$"
            },
            "french": {
              "type": ["string", "null"],
              "pattern": "^[3-9][abc][+]?$"
            },
            "yds": {
              "type": ["string", "null"],
              "pattern": "^5\\.[0-9]{1,2}[a-d]?$"
            },
            "uiaa": {
              "type": ["string", "null"],
              "pattern": "^(I{1,3}|IV|V|VI{1,3}|IX|X|XI{1,2})[+-]?$"
            }
          }
        },
        "height": {
          "type": "number",
          "minimum": 0,
          "description": "Height in meters"
        },
        "firstAscent": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "date": {
              "type": "string",
              "format": "date"
            },
            "info": {
              "type": "string"
            }
          }
        },
        "qualityRating": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5,
          "description": "Quality rating (0-5 stars)"
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Hold color for indoor routes (hex format)"
        },
        "beta": {
          "type": "string",
          "description": "Beta information"
        },
        "protectionRating": {
          "type": "string",
          "enum": ["bombproof", "good", "adequate", "runout", "serious", "x"],
          "description": "Protection rating indicating safety level"
        },
        "gearNotes": {
          "type": "string",
          "description": "Specific gear requirements or protection notes"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of tag names associated with the route"
        },
        "media": {
          "$ref": "media.schema.json",
          "description": "Media associated with this route (topos, beta videos, etc.)"
        },
        "qrCode": {
          "type": "object",
          "description": "QR code data for physical route marking (v1.3.0+)",
          "properties": {
            "data": {
              "type": "string",
              "description": "Generated QR code data string"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Public URL for the route"
            },
            "ipfsHash": {
              "type": "string",
              "description": "IPFS hash for CLDF archive reference",
              "pattern": "^(Qm[1-9A-HJ-NP-Za-km-z]{44}|bafy[a-z2-7]{50,})$"
            },
            "blockchainTx": {
              "type": "string",
              "description": "Blockchain transaction hash for permanent record",
              "pattern": "^(0x)?[a-fA-F0-9]{64}$"
            },
            "generatedAt": {
              "type": "string",
              "format": "date-time",
              "description": "When the QR code was generated"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}