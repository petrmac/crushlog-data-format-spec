{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cldf.io/schemas/locations.schema.json",
  "title": "CLDF Locations",
  "description": "Climbing locations data",
  "type": "object",
  "required": ["locations"],
  "properties": {
    "locations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/location"
      }
    }
  },
  "definitions": {
    "location": {
      "type": "object",
      "required": ["id", "name", "isIndoor"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier for the location (legacy)"
        },
        "clid": {
          "type": "string",
          "pattern": "^clid:v\\d+:location:[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
          "description": "CrushLog ID - globally unique identifier (v1.3.0+)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the climbing location"
        },
        "coordinates": {
          "type": "object",
          "properties": {
            "latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          },
          "required": ["latitude", "longitude"]
        },
        "country": {
          "type": "string",
          "description": "Country name"
        },
        "state": {
          "type": "string",
          "description": "State or province"
        },
        "city": {
          "type": "string",
          "description": "City or town name"
        },
        "address": {
          "type": "string",
          "description": "Street address"
        },
        "isIndoor": {
          "type": "boolean",
          "description": "Whether this is an indoor climbing location"
        },
        "starred": {
          "type": "boolean",
          "default": false,
          "description": "Whether this location is marked as favorite"
        },
        "rockType": {
          "$ref": "#/definitions/rockType"
        },
        "terrainType": {
          "$ref": "#/definitions/terrainType"
        },
        "accessInfo": {
          "type": "string",
          "description": "Access information and directions"
        },
        "media": {
          "$ref": "media.schema.json",
          "description": "Media associated with this location (overview, approach photos, etc.)"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "customFields": {
          "type": "object",
          "description": "Additional custom fields"
        }
      }
    },
    "rockType": {
      "type": "string",
      "enum": [
        "sandstone",
        "limestone",
        "granite",
        "basalt",
        "gneiss",
        "quartzite",
        "conglomerate",
        "schist",
        "dolomite",
        "slate",
        "rhyolite",
        "gabbro",
        "volcanicTuff",
        "andesite",
        "chalk"
      ]
    },
    "terrainType": {
      "type": "string",
      "enum": ["natural", "artificial"]
    }
  }
}