{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cldf.io/schemas/media-metadata.schema.json",
  "title": "CLDF Media Metadata",
  "description": "Media file references and metadata",
  "type": "object",
  "required": ["media"],
  "properties": {
    "media": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/mediaItem"
      }
    }
  },
  "definitions": {
    "mediaItem": {
      "type": "object",
      "required": ["id", "climbId", "type"],
      "properties": {
        "id": {
          "type": "integer",
          "description": "Unique identifier for the media item"
        },
        "climbId": {
          "type": "integer",
          "description": "Reference to the associated climb"
        },
        "type": {
          "type": "string",
          "enum": ["photo", "video"],
          "description": "Type of media"
        },
        "source": {
          "type": "string",
          "enum": ["photos_library", "local", "embedded"],
          "description": "Source of the media file"
        },
        "assetId": {
          "type": "string",
          "description": "Platform-specific asset identifier (e.g., PHAsset ID)"
        },
        "filename": {
          "type": "string",
          "description": "Original filename"
        },
        "thumbnailPath": {
          "type": "string",
          "description": "Path to thumbnail within the archive"
        },
        "embedded": {
          "type": "boolean",
          "default": false,
          "description": "Whether the full media file is included in the archive"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Media creation timestamp"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 0
            },
            "height": {
              "type": "integer",
              "minimum": 0
            },
            "size": {
              "type": "integer",
              "minimum": 0,
              "description": "File size in bytes"
            },
            "duration": {
              "type": "number",
              "minimum": 0,
              "description": "Video duration in seconds"
            },
            "location": {
              "type": "object",
              "properties": {
                "latitude": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                },
                "longitude": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                }
              },
              "description": "GPS location where media was captured"
            }
          }
        }
      }
    }
  }
}